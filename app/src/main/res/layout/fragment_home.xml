<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FTOE"
            android:textSize="38sp"
            android:paddingBottom="20dp"
            android:textColor="@color/purple_200"
            android:textStyle="bold" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Difficulty:"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/purple_200" />

        <RadioGroup
            android:id="@+id/difficulty_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">


                <RadioButton
                    android:id="@+id/easy_difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Easy" />

                <RadioButton
                    android:id="@+id/hard_difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hard" />

                <RadioButton
                    android:id="@+id/insane_difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Insane" />

                <RadioButton
                    android:id="@+id/impossible_difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Impossible" />




        </RadioGroup>

        <RadioGroup
            android:id="@+id/time_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">


            <RadioButton
                android:id="@+id/idfifteen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"

                android:text="15s" />

            <RadioButton
                android:id="@+id/idthirty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30s" />

            <RadioButton
                android:id="@+id/idfourtyfive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45s" />

            <RadioButton
                android:id="@+id/idonemin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60s" />




        </RadioGroup>

        <Button
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Start Game" />

        <ImageView
            android:id="@+id/idIVEmoji"
            android:layout_width="200dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:layout_height="200dp"
            android:src="@drawable/emoticon_logo_png_transparent" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>